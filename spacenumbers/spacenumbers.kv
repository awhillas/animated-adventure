#:kivy 2.0.0

<NaughtyBaddie>:
    size: 50,50
    texture: None
    canvas:
        Color:
            rgba: self.colour
        Ellipse:
            texture: self.texture
            pos: self.pos
            size: self.size

<GameLayout>:

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        spacing: 5


        BoxLayout:
            orientation: "horizontal"
            size_hint: (1, 0.1)
            Label:
                id: level
                font_size: 30
                text: "Level 1"

            Label:
                id: points
                font_size: 30
                text: "0"

        SpaceNumbersGame:
            score_lbl: points
            level_lbl: level
            # size_hint: (4, 1)
            canvas.before:
                Color:
                    rgba: 0,1,0,0.3
                Rectangle:
                    pos: self.pos
                    size: self.size
        Button:
            text: "1"
            size_hint: (1, 0.1)
